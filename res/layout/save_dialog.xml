<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaveDialog"
    android:background="?android:attr/dividerHorizontal" >

     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Elige categorÃ­a:"
        	android:textAppearance="?android:attr/textAppearanceLarge" />

   		<Spinner
        	android:id="@+id/spinner1"
        	android:layout_width="match_parent"
        	android:layout_height="60dp" />
   		
	</LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
        	android:id="@+id/textView2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Elige tab:"
        	android:textAppearance="?android:attr/textAppearanceLarge" />

   		<Spinner
        	android:id="@+id/spinner2"
        	android:layout_width="match_parent"
        	android:layout_height="60dp" />
   		
	</LinearLayout>
    
	   

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta es tu frase:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editPhrase2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Palabra" 
                android:textSize="23dp"/>

            <RadioButton
                android:id="@+id/radioPhrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frase" 
                android:textSize="23dp"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="0dip"
    	android:paddingLeft="2dip"
    	android:paddingRight="2dip"
    	android:measureWithLargestChild="true">

        <Button
            android:id="@+id/cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:background="@drawable/remove"
            android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
            android:onClick="cancelDialog"
            android:text="@string/cancel"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/sendButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
            android:background="@drawable/create"
            android:drawableRight="@android:drawable/ic_menu_save"
            android:onClick="sendDialog"
            android:text="@string/send"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>